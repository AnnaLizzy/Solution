@model ListLocationVM
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="text-center">Chi tiết địa điểm</h4>
<hr />
<button type="button" class="btn btn-sm">
    <a asp-action="Index"><i class="bi bi-chevron-left"></i>Back to List</a>
</button>

<div class="row g-2">
    <div class="col-6">
        <div class="input-group input-group-static">
            <label class="control-label pt-2">Tên vị trí làm việc :</label>
            <input class="form-control" type="text" value="@Model.LocationName" disabled>
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static">
            <label class="control-label pt-2">Khu vực làm việc :</label>
            <input class="form-control" value="@Model.Area" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static">
            <label class="control-label pt-2">Khu :</label>
            <input class="form-control" value="@Model.Region" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static">
            <label class="control-label pt-2">Tòa nhà :</label>
            <input class="form-control" type="text" value="@Model.Building" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static">
            <label class="control-label pt-2">Hướng :</label>
            <input class="form-control" value="@Model.Azimuth" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Tầng :</label>
            <input class="form-control" type="text" value="@Model.Floors" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Station type :</label>
            <input class="form-control" type="text" value="@Model.StationType" disabled>
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Khác :</label>
            <input class="form-control" type="text" value="@Model.Other" disabled>
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Ngày bắt đầu:</label>
            <input class="form-control" value="@Model.StartTime" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Ngày kết thúc :</label>
            <input class="form-control" value="@Model.EndTime" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Trạng thái :</label>
            <input class="form-control" value="@Model.SignStatus" disabled />
        </div>
    </div>
    <div class="col-6">
        <div class="input-group input-group-static ">
            <label class="control-label pt-2">Người phê duyệt :</label>
            <input class="form-control" type="text" value="@Model.SignUser" disabled />
        </div>
    </div>
    <div class="col-6">
        <button class="btn btn-primary" asp-controller="Location" asp-action="Update" asp-route-id="@Model.ListID">Sửa</button>
    </div>
</div>