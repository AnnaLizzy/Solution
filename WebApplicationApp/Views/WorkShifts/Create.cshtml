@model WebApplicationApp.Models.WorkShift

@{
    ViewData["Title"] = "Create - Tạo mới ca làm việc";
}

<h1>Create - Tạo mới ca làm việc</h1>

<h4>WorkShift</h4>
<hr />


<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4 form-group">
            <label asp-for="NameShift" class="control-label"></label>
            <input asp-for="NameShift" class="form-control" />
            <span asp-validation-for="NameShift" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="DescriptionShift" class="control-label"></label>
            <input asp-for="DescriptionShift" class="form-control" />
            <span asp-validation-for="DescriptionShift" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="StartTime" class="control-label"></label>
            <input asp-for="StartTime" type="time" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="EndTime" class="control-label"></label>
            <input asp-for="EndTime" type="time" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>



<div>
    <a asp-action="Index"><i class="bi bi-chevron-left"></i>Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
