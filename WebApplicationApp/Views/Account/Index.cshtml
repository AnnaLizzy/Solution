@model LoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-floating{
        margin-bottom: 20px;
    
    }
</style>
<div class="container my-auto">
    <div class="row">
        <div class="card-body">
            <form class="col-lg-4 col-md-8 col-12 mx-auto"  method="post" asp-action="Index">
       
                <h1 class="h3 mb-3 fw-normal">Đăng nhập</h1>

                <div class="input-group input-group-outline mb-3 ">
                    <label class="form-label" >UserName</label>
                    <input type="text" class="form-control" autocomplete="on" asp-for="UserName"  required>            
                    <div class="invalid-feedback" asp-validation-summary="All">
                        Enter User name
                    </div>
                </div>
                <div class="input-group input-group-outline mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control"  autocomplete="on" asp-for="Password" required>            
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Remember me
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>                
            </form>
        </div>
    </div>
</div>