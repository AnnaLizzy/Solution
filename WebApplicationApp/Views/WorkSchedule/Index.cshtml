@using ApiLibrary.ViewModels
@model List<WorkScheduleViewModel>
@{
    Layout="~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Work Schedule";
}
<h3>this is Work schedule</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Mã lịch làm việc
            </th>
            <th>
                Tên nhân viên
            </th>
            <th>
                Ca làm việc
            </th>
            <th>
                Địa điểm làm việc 
            </th>
            <th>
                Thời gian bắt đầu
            </th>
            <th>
                Thời gian kết thúc
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach(var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchedulesID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SchedulesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SchedulesID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SchedulesID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>